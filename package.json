{
  "name": "dazser-map",
  "version": "2.1.0",
  "description": "Landing page for dazser.com",
  "main": "index.html",
  "private": true,
  "scripts": {
    "build": "npm run clean && npm-run-all --parallel compile:*",
    "clean": "rm -rf dist/** && mkdir -p dist",
    "lint:ts": "eslint \"**/*.[jt]s\" --cache",
    "lint:scss": "stylelint --config .stylelintrc --syntax scss \"src/**/*.scss\"",
    "compile:scss": "sass --no-source-map src/styles/main.scss:dist/styles/main.css",
    "compile:images": "mkdir -p dist/images && cp src/images/jklogo.png dist/images/ && cp src/images/us.svg dist/images/",
    "compile:ts": "tsc -p tsconfig.json",
    "compile:html": "cp src/robots.txt dist/ && cp src/index.html dist/ && cp src/favicon.ico dist/",
    "serve": "npx http-server dist"
  },
  "devDependencies": {
    "@sparticuz/eslint-config": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "inline-source-cli": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "sass": "^1.39.2",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-twbs-bootstrap": "^2.2.3",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "typescript": "^4.4.2"
  }
}
