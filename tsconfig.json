{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "outDir": ".build",
    "rootDir": "src",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
